@model HairSalon.Models.Stylist

<html>
  <head>
    <title>Hair Salon - Edit</title>
  </head>
  <body>
    <h2>Edit</h2>
    <hr />
    <h4>Edit this item: @Html.DisplayFor(model => model.Name)</h4>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.StylistId)

        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.LabelFor(model => model.ClientId)
        @Html.DropDownList("ClientId")

        <input type="submit" value="Save" class="btn btn-default" />
    }
    @Html.ActionLink("Back to Stylists", "Index")
  </body>
</html>